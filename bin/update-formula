#!/bin/sh

sha256sum () {
    if [[ -x `which sha256sum` ]]; then
       sha256sum $1
    else
        shasum -a 256 $1
    fi
}

show_usage_error() {
    echo "Usage: $0 <version>" >&2
    exit 1
}

project_root="$(dirname $0)/../"

if [[ "$1" != "" ]]; then
    export VER="$1"
    wget -q https://github.com/cutbox/CutBox/archive/refs/tags/${VER}.tar.gz
    if  [[ -f "$VER.tar.gz" ]]; then
      export SHA=$(sha256sum "$VER.tar.gz" | awk '{printf $1}')
      rm -f *tar.gz
      envsubst < templates/Formula.cutbox.template.rb | tee "$project_root/Formula/cutbox.rb"
    else
        echo "CutBox does not have a version: $VER"
    fi
else
    show_usage_error
fi
