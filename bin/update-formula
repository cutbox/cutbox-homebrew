#!/usr/bin/env zsh

show_usage() {
    echo "Usage: $0 <version>"
    exit 1
}

if [[ "$1" =~ ([0-9]*\.){3} ]]
then
    VER="$1"
    wget -q https://github.com/cutbox/CutBox/archive/refs/tags/${VER}.tar.gz
    SHA=$(sha224sum "$VER.tar.gz" | awk '{printf $1}')
    rm *tar.gz
else
    show_usage
fi

VER=$VER SHA=$SHA mo templates/Formula.cutbox.rb.mustache
