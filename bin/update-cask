#!/usr/bin/env zsh

show_usage_error() {
    echo "Usage: $0 <version>" >&2
    exit 1
}

project_root="$(dirname $0)/../"

if [[ "$1" =~ ([0-9]*\.){3} ]]
then
    VER="$1"
    wget -q https://github.com/cutbox/CutBox/releases/download/${VER}/CutBox.dmg
    SHA=$(sha256sum "CutBox.dmg" | awk '{printf $1}')
    rm -f CutBox.dmg
else
    show_usage_error
fi

VER=$VER SHA=$SHA envsubst < templates/Cask.cutbox.mustache.rb | tee "$project_root/Casks/cutbox.rb"
